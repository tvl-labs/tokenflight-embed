---
/**
 * Integration showcase — section header for use-case demos below.
 */
---

<section class="tf-showcase not-content">
  <div class="tf-showcase-header tf-animate">
    <span class="tf-showcase-badge">Use Cases</span>
    <h2 class="tf-showcase-heading">Built for Every Use Case</h2>
    <p class="tf-showcase-subheading">See how teams embed TokenFlight in real products. Drop-in Web Components that fit seamlessly into any application context.</p>
  </div>
</section>

<style>
  .tf-showcase {
    max-width: 960px;
    margin: 0 auto 2rem;
    padding: var(--pg-section-gap, 6rem) 1.5rem 0;
  }

  .tf-showcase-header {
    text-align: center;
  }

  .tf-showcase-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--sl-color-accent, #6C5CE7);
    background: rgba(108, 92, 231, 0.1);
    border: 1px solid rgba(108, 92, 231, 0.2);
    padding: 4px 12px;
    border-radius: 20px;
    margin-bottom: 1rem;
  }

  .tf-showcase-heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    color: var(--pg-text, #EEF0F6);
    margin: 0 0 1rem;
    line-height: 1.15;
  }

  .tf-showcase-subheading {
    font-size: 1.0625rem;
    color: var(--pg-text-secondary, #8B93A5);
    margin: 0 auto;
    max-width: 520px;
    line-height: 1.6;
  }

  @media (max-width: 767px) {
    .tf-showcase {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* ── Scroll-triggered fade-in animation ── */
  @keyframes tf-sc-fadein {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tf-animate {
    opacity: 0;
    transform: translateY(24px);
  }

  .tf-animate--visible {
    animation: tf-sc-fadein 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @media (prefers-reduced-motion: reduce) {
    .tf-animate { opacity: 1; transform: none; }
    .tf-animate--visible { animation: none; }
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('tf-animate--visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.15 }
  );
  document.querySelectorAll('.tf-showcase .tf-animate').forEach((el) => observer.observe(el));
</script>
