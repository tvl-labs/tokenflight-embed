---
/**
 * Integration showcase — 3 cards linking to full example pages.
 * Each card has a mini CSS mockup header to hint at the use case.
 */
const examples = [
  {
    title: "Chat App",
    desc: "Embed payment requests directly in chat conversations — users pay from any chain without switching apps.",
    href: "#demo-chat",
    accent: "#6AB2F2",
    accentAlpha: "rgba(106, 178, 242, 0.12)",
  },
  {
    title: "Wallet App",
    desc: "Add cross-chain swap as a native tab in your wallet — no need to build swap infrastructure from scratch.",
    href: "#demo-wallet",
    accent: "#6C5CE7",
    accentAlpha: "rgba(108, 92, 231, 0.12)",
  },
  {
    title: "Social Feed",
    desc: "Embed swap and receive widgets directly in a social timeline — DeFi without leaving the feed.",
    href: "#demo-social",
    accent: "#1D9BF0",
    accentAlpha: "rgba(29, 155, 240, 0.12)",
  },
];
---

<section class="tf-showcase not-content">
  <div class="tf-showcase-header tf-animate">
    <span class="tf-showcase-badge">Use Cases</span>
    <h2 class="tf-showcase-heading">Built for Every Use Case</h2>
    <p class="tf-showcase-subheading">See how teams embed TokenFlight in real products. Drop-in Web Components that fit seamlessly into any application context.</p>
  </div>
  <div class="tf-showcase-grid">
    {examples.map((ex) => (
      <a class="tf-showcase-card tf-animate" href={ex.href} style={`--sc-accent: ${ex.accent}; --sc-accent-alpha: ${ex.accentAlpha};`}>
        {/* Mini mockup header */}
        <div class="tf-showcase-visual">
          <div class="tf-showcase-visual-glow" aria-hidden="true" />
          {ex.title === "Chat App" && (
            <div class="tf-mini-chat">
              <div class="tf-mini-bubble tf-mini-bubble--in" />
              <div class="tf-mini-bubble tf-mini-bubble--in tf-mini-bubble--short" />
              <div class="tf-mini-bubble tf-mini-bubble--out" />
              <div class="tf-mini-bubble tf-mini-bubble--in tf-mini-bubble--widget">
                <div class="tf-mini-widget-inner">
                  <div class="tf-mini-widget-row" />
                  <div class="tf-mini-widget-row tf-mini-widget-row--short" />
                  <div class="tf-mini-widget-btn" />
                </div>
              </div>
            </div>
          )}
          {ex.title === "Wallet App" && (
            <div class="tf-mini-wallet">
              <div class="tf-mini-wallet-bar" />
              <div class="tf-mini-wallet-balance" />
              <div class="tf-mini-wallet-tabs">
                <span /><span class="active" /><span />
              </div>
              <div class="tf-mini-wallet-body">
                <div class="tf-mini-widget-inner">
                  <div class="tf-mini-widget-row" />
                  <div class="tf-mini-widget-row tf-mini-widget-row--short" />
                  <div class="tf-mini-widget-btn" />
                </div>
              </div>
            </div>
          )}
          {ex.title === "Social Feed" && (
            <div class="tf-mini-feed">
              <div class="tf-mini-post">
                <div class="tf-mini-post-avatar" />
                <div class="tf-mini-post-lines">
                  <div class="tf-mini-post-line" /><div class="tf-mini-post-line tf-mini-post-line--short" />
                </div>
              </div>
              <div class="tf-mini-post-embed">
                <div class="tf-mini-widget-inner">
                  <div class="tf-mini-widget-row" />
                  <div class="tf-mini-widget-row tf-mini-widget-row--short" />
                  <div class="tf-mini-widget-btn" />
                </div>
              </div>
              <div class="tf-mini-feed-divider" />
              <div class="tf-mini-post">
                <div class="tf-mini-post-avatar" />
                <div class="tf-mini-post-lines">
                  <div class="tf-mini-post-line" /><div class="tf-mini-post-line tf-mini-post-line--short" />
                </div>
              </div>
            </div>
          )}
        </div>
        {/* Text content */}
        <div class="tf-showcase-body">
          <h3 class="tf-showcase-title">{ex.title}</h3>
          <p class="tf-showcase-desc">{ex.desc}</p>
          <span class="tf-showcase-link">View example &rarr;</span>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .tf-showcase {
    max-width: 960px;
    margin: 0 auto 2rem;
    padding: var(--pg-section-gap, 6rem) 1.5rem 0;
  }

  .tf-showcase-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .tf-showcase-badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--sl-color-accent, #6C5CE7);
    background: rgba(108, 92, 231, 0.1);
    border: 1px solid rgba(108, 92, 231, 0.2);
    padding: 4px 12px;
    border-radius: 20px;
    margin-bottom: 1rem;
  }

  .tf-showcase-heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    color: var(--pg-text, #EEF0F6);
    margin: 0 0 1rem;
    line-height: 1.15;
  }

  .tf-showcase-subheading {
    font-size: 1.0625rem;
    color: var(--pg-text-secondary, #8B93A5);
    margin: 0 auto;
    max-width: 520px;
    line-height: 1.6;
  }

  .tf-showcase-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  .tf-showcase-card {
    display: flex;
    flex-direction: column;
    border-radius: 16px;
    border: 1px solid var(--pg-border, #252A38);
    background: var(--pg-surface-raised, #1E2230);
    overflow: hidden;
    text-decoration: none;
    transition: border-color 0.25s ease, transform 0.25s ease, box-shadow 0.25s ease;
  }

  .tf-showcase-card:hover {
    border-color: var(--sc-accent);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px var(--sc-accent-alpha, rgba(108, 92, 231, 0.12)),
                0 4px 16px rgba(0, 0, 0, 0.1);
  }

  /* ── Mini mockup visual ─────────────────────────────────────────── */
  .tf-showcase-visual {
    height: 160px;
    background: linear-gradient(160deg, var(--sc-accent-alpha) 0%, rgba(108, 92, 231, 0.05) 100%);
    padding: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .tf-showcase-visual::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, var(--sc-accent) 0.5px, transparent 0.5px);
    background-size: 16px 16px;
    opacity: 0.06;
    pointer-events: none;
  }

  .tf-showcase-visual-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--sc-accent) 0%, transparent 70%);
    opacity: 0.08;
    filter: blur(30px);
    pointer-events: none;
  }

  /* ── Shared widget inner mockup ── */
  .tf-mini-widget-inner {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 6px 8px;
    width: 100%;
  }

  .tf-mini-widget-row {
    height: 5px;
    border-radius: 3px;
    background: var(--sc-accent);
    opacity: 0.4;
    width: 75%;
  }

  .tf-mini-widget-row--short {
    width: 50%;
  }

  .tf-mini-widget-btn {
    height: 8px;
    border-radius: 4px;
    background: var(--sc-accent);
    opacity: 0.5;
    width: 100%;
    margin-top: 2px;
  }

  /* Chat mockup */
  .tf-mini-chat {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .tf-mini-bubble {
    height: 10px;
    border-radius: 5px;
    opacity: 0.5;
  }

  .tf-mini-bubble--in {
    width: 65%;
    background: var(--sc-accent);
    align-self: flex-start;
  }

  .tf-mini-bubble--out {
    width: 50%;
    background: #5E6673;
    align-self: flex-end;
  }

  .tf-mini-bubble--short {
    width: 40%;
  }

  .tf-mini-bubble--widget {
    height: auto;
    width: 85%;
    border-radius: 10px;
    background: var(--sc-accent);
    opacity: 0.3;
    border: 1px solid var(--sc-accent);
  }

  /* Wallet mockup */
  .tf-mini-wallet {
    width: 85%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }

  .tf-mini-wallet-bar {
    width: 100%;
    height: 8px;
    border-radius: 4px;
    background: var(--sc-accent);
    opacity: 0.35;
  }

  .tf-mini-wallet-balance {
    width: 50%;
    height: 14px;
    border-radius: 4px;
    background: var(--sc-accent);
    opacity: 0.5;
  }

  .tf-mini-wallet-tabs {
    display: flex;
    gap: 6px;
    width: 80%;
  }

  .tf-mini-wallet-tabs span {
    flex: 1;
    height: 6px;
    border-radius: 3px;
    background: var(--sc-accent);
    opacity: 0.2;
  }

  .tf-mini-wallet-tabs span.active {
    opacity: 0.6;
  }

  .tf-mini-wallet-body {
    width: 100%;
    border-radius: 8px;
    background: var(--sc-accent);
    opacity: 0.2;
    border: 1px solid var(--sc-accent);
  }

  /* Feed mockup */
  .tf-mini-feed {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .tf-mini-post {
    display: flex;
    gap: 6px;
    align-items: flex-start;
  }

  .tf-mini-post-avatar {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--sc-accent);
    opacity: 0.5;
    flex-shrink: 0;
  }

  .tf-mini-post-lines {
    display: flex;
    flex-direction: column;
    gap: 4px;
    flex: 1;
  }

  .tf-mini-post-line {
    height: 6px;
    border-radius: 3px;
    background: var(--sc-accent);
    opacity: 0.35;
    width: 90%;
  }

  .tf-mini-post-line--short {
    width: 55%;
  }

  .tf-mini-post-embed {
    border-radius: 8px;
    background: var(--sc-accent);
    opacity: 0.2;
    border: 1px solid var(--sc-accent);
    margin-left: 22px;
  }

  .tf-mini-feed-divider {
    height: 1px;
    background: var(--sc-accent);
    opacity: 0.15;
  }

  /* ── Text content ───────────────────────────────────────────────── */
  .tf-showcase-body {
    padding: 1.25rem 1.25rem 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .tf-showcase-title {
    font-size: 1rem;
    font-weight: 650;
    color: var(--pg-text, #EEF0F6);
    margin: 0 0 0.5rem;
    letter-spacing: -0.01em;
  }

  .tf-showcase-desc {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--pg-text-secondary, #8B93A5);
    margin: 0 0 1rem;
    flex: 1;
  }

  .tf-showcase-link {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sc-accent);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: gap 0.2s ease, opacity 0.15s;
  }

  .tf-showcase-card:hover .tf-showcase-link {
    gap: 0.5rem;
    opacity: 1;
  }

  @media (max-width: 767px) {
    .tf-showcase-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .tf-showcase {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* ── Scroll-triggered fade-in animation ── */
  @keyframes tf-sc-fadein {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tf-animate {
    opacity: 0;
    transform: translateY(24px);
  }

  .tf-animate--visible {
    animation: tf-sc-fadein 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  /* Stagger cards */
  .tf-showcase-card.tf-animate--visible:nth-child(1) { animation-delay: 0.1s; }
  .tf-showcase-card.tf-animate--visible:nth-child(2) { animation-delay: 0.2s; }
  .tf-showcase-card.tf-animate--visible:nth-child(3) { animation-delay: 0.3s; }

  @media (prefers-reduced-motion: reduce) {
    .tf-animate { opacity: 1; transform: none; }
    .tf-animate--visible { animation: none; }
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('tf-animate--visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.15 }
  );
  document.querySelectorAll('.tf-showcase .tf-animate').forEach((el) => observer.observe(el));
</script>
