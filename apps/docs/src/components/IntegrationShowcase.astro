---
/**
 * Integration showcase — 3 cards linking to full example pages.
 * Each card has a mini CSS mockup header to hint at the use case.
 */
const examples = [
  {
    title: "Chat App",
    desc: "Embed payment requests directly in chat conversations — users pay from any chain without switching apps.",
    href: "/examples/chat-app/",
    accent: "#6AB2F2",
    accentAlpha: "rgba(106, 178, 242, 0.12)",
  },
  {
    title: "Wallet App",
    desc: "Add cross-chain swap as a native tab in your wallet — no need to build swap infrastructure from scratch.",
    href: "/examples/wallet-app/",
    accent: "#6C5CE7",
    accentAlpha: "rgba(108, 92, 231, 0.12)",
  },
  {
    title: "Social Feed",
    desc: "Embed swap and receive widgets directly in a social timeline — DeFi without leaving the feed.",
    href: "/examples/social-feed/",
    accent: "#1D9BF0",
    accentAlpha: "rgba(29, 155, 240, 0.12)",
  },
];
---

<section class="tf-showcase not-content">
  <h2 class="tf-showcase-heading">Built for Every Use Case</h2>
  <p class="tf-showcase-subheading">See how teams embed TokenFlight in real products.</p>
  <div class="tf-showcase-grid">
    {examples.map((ex) => (
      <a class="tf-showcase-card" href={ex.href} style={`--sc-accent: ${ex.accent}; --sc-accent-alpha: ${ex.accentAlpha};`}>
        {/* Mini mockup header */}
        <div class="tf-showcase-visual">
          {ex.title === "Chat App" && (
            <div class="tf-mini-chat">
              <div class="tf-mini-bubble tf-mini-bubble--in" />
              <div class="tf-mini-bubble tf-mini-bubble--in tf-mini-bubble--short" />
              <div class="tf-mini-bubble tf-mini-bubble--out" />
              <div class="tf-mini-bubble tf-mini-bubble--in tf-mini-bubble--widget" />
            </div>
          )}
          {ex.title === "Wallet App" && (
            <div class="tf-mini-wallet">
              <div class="tf-mini-wallet-bar" />
              <div class="tf-mini-wallet-balance" />
              <div class="tf-mini-wallet-tabs">
                <span /><span class="active" /><span />
              </div>
              <div class="tf-mini-wallet-body" />
            </div>
          )}
          {ex.title === "Social Feed" && (
            <div class="tf-mini-feed">
              <div class="tf-mini-post">
                <div class="tf-mini-post-avatar" />
                <div class="tf-mini-post-lines">
                  <div class="tf-mini-post-line" /><div class="tf-mini-post-line tf-mini-post-line--short" />
                </div>
              </div>
              <div class="tf-mini-post-embed" />
              <div class="tf-mini-feed-divider" />
              <div class="tf-mini-post">
                <div class="tf-mini-post-avatar" />
                <div class="tf-mini-post-lines">
                  <div class="tf-mini-post-line" /><div class="tf-mini-post-line tf-mini-post-line--short" />
                </div>
              </div>
            </div>
          )}
        </div>
        {/* Text content */}
        <div class="tf-showcase-body">
          <h3 class="tf-showcase-title">{ex.title}</h3>
          <p class="tf-showcase-desc">{ex.desc}</p>
          <span class="tf-showcase-link">View example &rarr;</span>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .tf-showcase {
    max-width: 820px;
    margin: 0 auto 2rem;
    padding: var(--pg-section-gap, 6rem) 1.5rem 0;
  }

  .tf-showcase-heading {
    text-align: center;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--pg-text, #EEF0F6);
    margin: 0 0 0.75rem;
  }

  .tf-showcase-subheading {
    text-align: center;
    font-size: 1rem;
    color: var(--pg-text-secondary, #8B93A5);
    margin: 0 auto 2.5rem;
    max-width: 400px;
    line-height: 1.5;
  }

  .tf-showcase-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .tf-showcase-card {
    display: flex;
    flex-direction: column;
    border-radius: 14px;
    border: 1px solid var(--pg-border, #252A38);
    background: var(--pg-surface-raised, #1E2230);
    overflow: hidden;
    text-decoration: none;
    transition: border-color 0.25s ease, transform 0.25s ease, box-shadow 0.25s ease;
  }

  .tf-showcase-card:hover {
    border-color: var(--sc-accent);
    transform: translateY(-3px);
    box-shadow: 0 8px 32px var(--sc-accent-alpha, rgba(108, 92, 231, 0.12));
  }

  /* ── Mini mockup visual ─────────────────────────────────────────── */
  .tf-showcase-visual {
    height: 130px;
    background: linear-gradient(160deg, var(--sc-accent-alpha) 0%, rgba(108, 92, 231, 0.05) 100%);
    padding: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
  }

  .tf-showcase-visual::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, var(--sc-accent) 0.5px, transparent 0.5px);
    background-size: 16px 16px;
    opacity: 0.06;
    pointer-events: none;
  }

  /* Chat mockup */
  .tf-mini-chat {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .tf-mini-bubble {
    height: 10px;
    border-radius: 5px;
    opacity: 0.5;
  }

  .tf-mini-bubble--in {
    width: 65%;
    background: var(--sc-accent);
    align-self: flex-start;
  }

  .tf-mini-bubble--out {
    width: 50%;
    background: #5E6673;
    align-self: flex-end;
  }

  .tf-mini-bubble--short {
    width: 40%;
  }

  .tf-mini-bubble--widget {
    height: 32px;
    width: 80%;
    border-radius: 8px;
    background: var(--sc-accent);
    opacity: 0.35;
    border: 1px solid var(--sc-accent);
  }

  /* Wallet mockup */
  .tf-mini-wallet {
    width: 80%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }

  .tf-mini-wallet-bar {
    width: 100%;
    height: 8px;
    border-radius: 4px;
    background: var(--sc-accent);
    opacity: 0.35;
  }

  .tf-mini-wallet-balance {
    width: 50%;
    height: 14px;
    border-radius: 4px;
    background: var(--sc-accent);
    opacity: 0.5;
  }

  .tf-mini-wallet-tabs {
    display: flex;
    gap: 6px;
    width: 80%;
  }

  .tf-mini-wallet-tabs span {
    flex: 1;
    height: 6px;
    border-radius: 3px;
    background: var(--sc-accent);
    opacity: 0.2;
  }

  .tf-mini-wallet-tabs span.active {
    opacity: 0.6;
  }

  .tf-mini-wallet-body {
    width: 100%;
    height: 32px;
    border-radius: 8px;
    background: var(--sc-accent);
    opacity: 0.25;
  }

  /* Feed mockup */
  .tf-mini-feed {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .tf-mini-post {
    display: flex;
    gap: 6px;
    align-items: flex-start;
  }

  .tf-mini-post-avatar {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--sc-accent);
    opacity: 0.5;
    flex-shrink: 0;
  }

  .tf-mini-post-lines {
    display: flex;
    flex-direction: column;
    gap: 4px;
    flex: 1;
  }

  .tf-mini-post-line {
    height: 6px;
    border-radius: 3px;
    background: var(--sc-accent);
    opacity: 0.35;
    width: 90%;
  }

  .tf-mini-post-line--short {
    width: 55%;
  }

  .tf-mini-post-embed {
    height: 24px;
    border-radius: 6px;
    background: var(--sc-accent);
    opacity: 0.25;
    border: 1px solid var(--sc-accent);
    margin-left: 20px;
  }

  .tf-mini-feed-divider {
    height: 1px;
    background: var(--sc-accent);
    opacity: 0.15;
  }

  /* ── Text content ───────────────────────────────────────────────── */
  .tf-showcase-body {
    padding: 1rem 1.125rem 1.25rem;
  }

  .tf-showcase-title {
    font-size: 0.9375rem;
    font-weight: 650;
    color: var(--pg-text, #EEF0F6);
    margin: 0 0 0.375rem;
    letter-spacing: -0.01em;
  }

  .tf-showcase-desc {
    font-size: 0.8125rem;
    line-height: 1.55;
    color: var(--pg-text-secondary, #8B93A5);
    margin: 0 0 0.75rem;
  }

  .tf-showcase-link {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--sc-accent);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: gap 0.2s ease, opacity 0.15s;
  }

  .tf-showcase-card:hover .tf-showcase-link {
    gap: 0.5rem;
    opacity: 1;
  }

  @media (max-width: 767px) {
    .tf-showcase-grid {
      grid-template-columns: 1fr;
      max-width: 380px;
      margin: 0 auto;
    }

    .tf-showcase {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
