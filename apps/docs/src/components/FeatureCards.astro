</div>

<style>
  .tf-features {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* ── Float Animation ── */
  @keyframes tf-feat-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @media (prefers-reduced-motion: reduce) {
    .tf-feat-visual { animation: none !important; }
  }

  /* ── Each Feature Section ── */
  .tf-feat {
    display: grid;
    grid-template-columns: 280px 1fr;
    align-items: center;
    gap: 3rem;
    padding: 3rem;
    border-radius: 24px;
    border: 1px solid var(--pg-border, #252A38);
    background: var(--pg-surface-raised, #1E2230);
    position: relative;
    overflow: hidden;
  }

  /* Reverse layout for alternating sections */
  .tf-feat--reverse {
    grid-template-columns: 1fr 280px;
  }

  .tf-feat--reverse .tf-feat-visual {
    order: 2;
  }

  .tf-feat--reverse .tf-feat-content {
    order: 1;
  }

  /* ── Visual / Illustration ── */
  .tf-feat-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
    animation: tf-feat-float 6s ease-in-out infinite;
  }

  .tf-feat-visual--fw { animation-delay: 0s; }
  .tf-feat-visual--cc { animation-delay: -1.5s; }
  .tf-feat-visual--lt { animation-delay: -3s; }
  .tf-feat-visual--cust { animation-delay: -4.5s; }

  .tf-feat-illust {
    width: 240px;
    height: 200px;
    position: relative;
    z-index: 1;
  }

  /* ── Glow Halo ── */
  .tf-feat-glow {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    filter: blur(50px);
    z-index: 0;
    pointer-events: none;
    opacity: 0.4;
