            <stop stop-color="#A78BFA"/><stop offset="1" stop-color="#60A5FA"/>
          </linearGradient>
          <filter id="fw-glow"><feGaussianBlur stdDeviation="3" result="blur"/><feMerge><feMergeNode in="blur"/><feMergeNode in="SourceGraphic"/></feMerge></filter>
