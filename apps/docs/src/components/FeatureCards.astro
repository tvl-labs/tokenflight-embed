          <circle cx="210" cy="30" r="1.2" fill="#A78BFA"/>
          <circle cx="30" cy="60" r="1.2" fill="#A78BFA"/><circle cx="60" cy="60" r="1.2" fill="#A78BFA"/>
          <circle cx="90" cy="60" r="1.2" fill="#A78BFA"/><circle cx="120" cy="60" r="1.2" fill="#A78BFA"/>
          <circle cx="150" cy="60" r="1.2" fill="#A78BFA"/><circle cx="180" cy="60" r="1.2" fill="#A78BFA"/>
          <circle cx="210" cy="60" r="1.2" fill="#A78BFA"/>
          <circle cx="30" cy="90" r="1.2" fill="#A78BFA"/><circle cx="60" cy="90" r="1.2" fill="#A78BFA"/>
          <circle cx="90" cy="90" r="1.2" fill="#A78BFA"/><circle cx="120" cy="90" r="1.2" fill="#A78BFA"/>
          <circle cx="150" cy="90" r="1.2" fill="#A78BFA"/><circle cx="180" cy="90" r="1.2" fill="#A78BFA"/>
          <circle cx="210" cy="90" r="1.2" fill="#A78BFA"/>
          <circle cx="30" cy="120" r="1.2" fill="#A78BFA"/><circle cx="60" cy="120" r="1.2" fill="#A78BFA"/>
          <circle cx="90" cy="120" r="1.2" fill="#A78BFA"/><circle cx="120" cy="120" r="1.2" fill="#A78BFA"/>
          <circle cx="150" cy="120" r="1.2" fill="#A78BFA"/><circle cx="180" cy="120" r="1.2" fill="#A78BFA"/>
          <circle cx="210" cy="120" r="1.2" fill="#A78BFA"/>
          <circle cx="30" cy="150" r="1.2" fill="#A78BFA"/><circle cx="60" cy="150" r="1.2" fill="#A78BFA"/>
          <circle cx="90" cy="150" r="1.2" fill="#A78BFA"/><circle cx="120" cy="150" r="1.2" fill="#A78BFA"/>
          <circle cx="150" cy="150" r="1.2" fill="#A78BFA"/><circle cx="180" cy="150" r="1.2" fill="#A78BFA"/>
          <circle cx="210" cy="150" r="1.2" fill="#A78BFA"/>
