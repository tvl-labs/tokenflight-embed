---
/**
 * Infinite-scrolling marquee of supported chains.
 * Pure CSS animation â€” no JS, no API calls at runtime.
 * Content is duplicated for seamless looping.
 */
const chains = [
  { name: "Ethereum",  color: "#627EEA" },
  { name: "Base",      color: "#0052FF" },
  { name: "Arbitrum",  color: "#28A0F0" },
  { name: "Optimism",  color: "#FF0420" },
  { name: "Polygon",   color: "#8247E5" },
  { name: "Solana",    color: "#9945FF" },
  { name: "BNB Chain", color: "#F0B90B" },
  { name: "Avalanche", color: "#E84142" },
  { name: "zkSync",    color: "#1E69FF" },
  { name: "Linea",     color: "#61DFFF" },
  { name: "Mantle",    color: "#65B3AE" },
  { name: "Berachain", color: "#B5894E" },
  { name: "Unichain",  color: "#FC0FC0" },
  { name: "Abstract",  color: "#4F46E5" },
  { name: "Monad",     color: "#836EF9" },
];
---

<div class="tf-marquee not-content" aria-label="Supported chains">
  <div class="tf-marquee-track">
    {/* First copy */}
    {chains.map((c) => (
      <span class="tf-marquee-item">
        <span class="tf-marquee-dot" style={`background: ${c.color};`} />
        {c.name}
      </span>
    ))}
    {/* Duplicate for seamless loop */}
    {chains.map((c) => (
      <span class="tf-marquee-item" aria-hidden="true">
        <span class="tf-marquee-dot" style={`background: ${c.color};`} />
        {c.name}
      </span>
    ))}
  </div>
</div>

<style>
  .tf-marquee {
    position: relative;
    overflow: hidden;
    padding: 1.5rem 0;
    margin: 0 auto;
    max-width: 820px;
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
  }

  .tf-marquee-track {
    display: flex;
    gap: 1.75rem;
    width: max-content;
    animation: tf-scroll 35s linear infinite;
  }

  .tf-marquee:hover .tf-marquee-track {
    animation-play-state: paused;
  }

  .tf-marquee-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--pg-text-secondary, #8B93A5);
    white-space: nowrap;
    user-select: none;
    letter-spacing: -0.01em;
  }

  .tf-marquee-dot {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  @keyframes tf-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .tf-marquee-track {
      animation-duration: 120s;
    }
  }
</style>
