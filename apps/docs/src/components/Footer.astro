<style>
  .tf-footer {
    border-top: 1px solid var(--pg-border);
    padding: 4rem 1.5rem 3rem;
    text-align: center;
  }

  .tf-footer-inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  /* Brand */
  .tf-footer-brand {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    transition: opacity 150ms ease;
  }

  .tf-footer-brand:hover {
    opacity: 0.75;
  }

  .tf-footer-logo {
    width: 28px;
    height: 28px;
  }

  .tf-footer-wordmark {
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--pg-text);
  }

  /* Tagline */
  .tf-footer-tagline {
    font-size: 0.9375rem;
    color: var(--pg-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  /* Nav */
  .tf-footer-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .tf-footer-nav a {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--pg-text-secondary);
    text-decoration: none;
    transition: color 150ms ease;
  }

  .tf-footer-nav a:hover {
    color: var(--tf-header-accent, #8B7CF6);
  }

  .tf-footer-dot {
    color: var(--pg-text-dim);
    font-size: 0.875rem;
    user-select: none;
  }

  /* Social icons */
  .tf-footer-social {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.25rem;
  }

  .tf-footer-social a {
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    color: var(--pg-text-dim);
    transition: color 150ms ease, background 150ms ease;
  }

  .tf-footer-social a:hover {
    color: var(--pg-text);
    background: var(--tf-header-hover-bg, rgba(139, 124, 246, 0.06));
  }

  /* Copyright */
  .tf-footer-copy {
    font-size: 0.8125rem;
    color: var(--pg-text-dim);
    margin: 0.5rem 0 0;
  }

  @media (max-width: 480px) {
    .tf-footer {
      padding: 3rem 1rem 2rem;
    }
  }
</style>
